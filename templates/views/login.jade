doctype html
html

	
	// ------------ HEADER  -------- //
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")

		title ?
		link(rel="shortcut icon", href="/favicon2.ico", type="image/x-icon")
		
		
		//- Customise the stylesheet for your site by editing /public/styles/site.sass
		link(href="/styles/prism.css", rel="stylesheet")
		link(href="/styles/site.css", rel="stylesheet")
		link(type="text/css", rel="stylesheet" href="/styles/font-awesome-4.3.0/css/font-awesome.min.css")
		link(href='https://fonts.googleapis.com/css?family=Poppins:300,500,700' rel='stylesheet' type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css')
		
		style.
			form{
				border: 1px #ccc solid;
				margin:10px auto;
				width: 500px;
				padding:50px;
				text-align:center;
				margin-top:100px;
			}
			.incorrect{
				border:2px solid #cc0000;
			}
			input, button{
				padding: 5px;
				margin: 0;
				margin-left: -3px;
				line-height: 22px;
				border-top-left-radius: 0;
				border-bottom-left-radius: 0;
				border-width: 2px;
			}
	// ------------ BODY  -------- //
	body(data-spy="scroll" data-target=".navbar" data-offset="50")
		form(action="#" method="post") 
			h2 Who goes there?
			hr
			
			input(type="password" name="password" placeholder="Passphrase" class="#{msg}")
			button(type="submit") Enter
